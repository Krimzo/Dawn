{
    "name": "dawn",
    "scopeName": "source.dawn",
    "patterns": [ { "include": "#all" } ],
    "repository": {
        "all": {
             "patterns": [
                { "include": "#operators" },
                { "include": "#keywords" },
                { "include": "#keywords_special" },
                { "include": "#types" },
                { "include": "#functions" },
                { "include": "#names" },
                { "include": "#numbers" },
                { "include": "#chars" },
                { "include": "#strings" },
                { "include": "#comments" }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.dawn",
                    "match": "(\\+|\\-|\\*|/|\\^|%|\\+=|\\-=|\\*=|/=|\\^=|%=|!|&|\\||<>|==|!=|<=|>=|<|>|=|->|>>|:|,|`|\\(|\\)|\\{|\\}|\\[|\\])"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.dawn",
                    "match": "\\b(import|func|oper|return|const|var|ref|if|else|elif|switch|case|default|for|while|loop|break|continue|throw|try|catch|enum|struct)\\b"
                }
            ]
        },
        "keywords_special": {
            "patterns": [
                {
                    "name": "keyword.other.dawn",
                    "match": "\\b(self|true|false|bool|int|float|char|string)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "entity.name.type.dawn",
                    "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.dawn",
                    "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                }
            ]
        },
        "names": {
            "patterns": [
                {
                    "name": "variable.other.dawn",
                    "match": "\\b([a-z_][a-zA-Z0-9_]*)\\b(?!\\s*\\()"
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.dawn",
            "match": "\\b\\d+\\.\\d+|\\b\\d+\\.|\\.\\d+|\\b\\d+"
        },
        "chars": {
            "name": "string.quoted.single.dawn",
            "begin": "\\'",
            "end": "\\'",
            "patterns": [
                {
                    "name": "constant.character.escape.dawn",
                    "match": "\\\\."
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.dawn",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.dawn",
                    "match": "\\\\."
                },
                {
                    "name": "meta.interpolation.dawn",
                    "begin": "\\{",
                    "end": "\\}",
                    "patterns": [ { "include": "#all" } ]
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.dawn",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.dawn",
                    "begin": "/\\*",
                    "end": "\\*/",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.comment.dawn"
                        }
                    },
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.comment.dawn"
                        }
                    }
                }
            ]
        }
    }
}