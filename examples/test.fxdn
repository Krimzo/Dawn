fu test_add(int value, int adder): int {
    if value > adder {
        eval value + adder;
    }
    eval 0;
}

fu test_print(int value) {
    print(test_add(value, 5));
}

type float2 {
    float x;
    float y;

    fu float2 {}
    
    fu float2(float a) {
        x = a;
        y = a;
    }

    fu float2(float x, float y) {
        self:x = x;
        self:y = y;
    }
    
    fu add(float2 obj): float2 {
        eval float2(x + obj:x, y + obj:y);
    }

    fu sub(float2 obj): float2 {
        eval float2(x - obj:x, y - obj:y);
    }
}

fu +(float2 left, float2 right): float2 {
    eval left:add(right);
}

fu -(float2 left, float2 right): float2 {
    eval left:sub(right);
}

