class Float2 {
	pub float x, y;

	pub maker() {
		x = 0.0;
		y = 0.0;
	}
	pub maker(float a) {
		x = a;
		y = a;
	}
	pub maker(float x, float y) {
		self->x = x;
		self->y = y;
	}

	pub add(Float2 obj) -> Float2 {
		<- Float2(x + obj->x, y + obj->y);
	}
	pub sub(Float2 obj) -> Float2 {
		<- Float2(x - obj->x, y - obj->y);
	}

	pub +(Float2 obj) -> Float2 {
		<- add(obj);
	}
	pub -(Float2 obj) -> Float2 {
		<- sub(obj);
	}
}

